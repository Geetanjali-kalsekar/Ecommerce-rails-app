<h1>New Product </h1>

<%= form_with model: @product, local: true do |form| %>
<div class="field">
	<%= form.label :name, "Product Name" %>
	<%= form.text_field :name %>
</div>

<div class="field">
	<%= form.label :price, "Price" %>
	<%= form.number_field :price, step: 0.01 %>
</div>

<div class= "actions">
	<%= form.submit "Create Product" %>
</div>

<% end %>

<%= link_to 'Back', products_path %>

