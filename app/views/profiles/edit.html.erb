<h1>Edit Profile</h1>

<%= form_with model: @profile, local: true do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :contact_no, "Contact Number" %>
    <%= form.text_field :contact_no, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender, [["Male", "male"], ["Female", "female"], ["Other", "other"]], {}, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Update Profile", class: "button primary" %>
  </div>
<% end %> <!-- Ensure the block is closed properly -->
