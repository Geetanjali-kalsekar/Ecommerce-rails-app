<h1>Create New Address</h1>

<%= form_with model: @address, url: profile_addresses_path(@profile), local: true do |form| %>

  <div class="field">
    <%= form.label :colony %>
    <%= form.text_field :colony, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :pincode %>
    <%= form.text_field :pincode, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Address", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to Addresses', profile_addresses_path(@profile), class: 'btn btn-secondary' %>

<% if @address.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
